    "install": "prebuild-install --download --verbose || node-gyp rebuild",
    "test": "standard && mocha tests/crypto.js",
    "testJS": "mocha tests/cryptoJs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylersisia/chimera-crypto.git"
  },
