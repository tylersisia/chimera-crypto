  },
  "engineStrict": true,
  "homepage": "https://github.com/tylersisia/chimera-crypto#readme",
  "author": "The TurtleCoin Developers",
  "license": "GPL-3.0",
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.14.0",
    "prebuild-install": "^5.3.3"
  },
  "standard": {
    "ignore": [
      "build/*",
      "emsdk/*",
      "examples/*",
      "include/*",
      "jsbuild/*",
      "prebuilds/*",
      "src/*"
    ]
  },
  "devDependencies": {
    "mocha": "^7.2.0",
    "standard": "^14.3.1"
